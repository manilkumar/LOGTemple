@using LOG.Models
@model  IEnumerable<LOG.Models.UploadModel>


<link rel="stylesheet" href="~/Gallery-master/css/blueimp-gallery.css">
<link rel="stylesheet" href="~/Gallery-master/css/blueimp-gallery-indicator.css">
<link rel="stylesheet" href="~/Gallery-master/css/blueimp-gallery-video.css">


<div class="container">

    <div class="row" style="padding-top: 150px">

        <h1>Our Church Memorable Moments</h1>
        <br />
        <!-- The Gallery as inline carousel, can be positioned anywhere on the page -->
        <div id="blueimp-image-carousel" class="blueimp-gallery blueimp-gallery-carousel">
            <div class="slides">


            </div>
            <h3 class="title"></h3>
            <a class="prev">‹</a>
            <a class="next">›</a>
            <a class="play-pause"></a>
        </div>
        <div id="links">
            @foreach (var item in Model)
            {
                <a href="#" data-gallery data-src="/Gallery/@(Path.GetFileName(item.FilePath))">

                </a>

            }
        </div>
    </div>


</div>

<script src="~/Gallery-master/js/blueimp-helper.js"></script>
<script src="~/Gallery-master/js/blueimp-gallery.js"></script>
<script src="~/Gallery-master/js/blueimp-gallery-fullscreen.js"></script>
<script src="~/Gallery-master/js/blueimp-gallery-indicator.js"></script>
<script src="~/Gallery-master/js/blueimp-gallery-video.js"></script>
<script src="~/Gallery-master/js/blueimp-gallery-vimeo.js"></script>
<script src="~/Gallery-master/js/blueimp-gallery-youtube.js"></script>
<script src="~/Gallery-master/js/jquery.blueimp-gallery.js"></script>
<script src="~/Gallery-master/js/demo/demo.js"></script>
