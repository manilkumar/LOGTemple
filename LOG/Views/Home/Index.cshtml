<!-- contact -->
<section id="contact" class="section appear clearfix">
    <div class="container">

        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                <div class="section-header">
                    <h2 class="section-heading animated" data-animation="bounceInUp">Please post your Queries/Prayer Requests</h2>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12 col-lg-12">
                <div id="sendmessage">Your message has been sent. Thank you!</div>
                <div id="errormessage"></div>
                <div class="col-lg-6 col-sm-6 col-xs-6 col-md-6">
                    <form action="" method="post" role="form" class="contactForm">

                        <div class="form-group row">

                            <label class="col-xs-2 col-sm-2 col-md-2 col-lg-2">Name:</label>

                            <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">
                                <input type="text" name="UserName" class="form-control" id="name" placeholder=" Name" data-rule="minlen:4" data-msg="Please enter at least 4 chars" />

                            </div>
                            <div class="validation"></div>

                        </div>
                        <div class="form-group row">
                            <label class="col-xs-2 col-sm-2 col-md-2 col-lg-2">ContactNo:</label>
                            <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">

                                <input type="text" name="ContactNo" class="form-control" id="mobile" placeholder=" Contact No" data-rule="phoneno" data-msg="Please enter a valid number" />
                            </div>
                            <div class="validation"></div>

                        </div>

                        <div class="form-group row">
                            <label class="col-xs-2 col-sm-2 col-md-2 col-lg-2">Email:</label>
                            <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">

                                <input type="email" class="form-control" name="EmailId" id="email" placeholder=" Email" data-rule="email" data-msg="Please enter a valid email" />
                            </div>
                            <div class="validation"></div>

                        </div>
                        <div class="form-group row">
                            <label class="col-xs-2 col-sm-2 col-md-2 col-lg-2">Subject:</label>
                            <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">
                                <div class="col-sm-6 col-lg-6 col-md-6 col-xs-6">
                                    <input type="checkbox" name="IsQuery" value="false" id="chkQuery" />
                                    <label for="chkQuery">Query</label>
                                </div>
                                <div class="col-sm-6 col-lg-6 col-md-6 col-xs-6">
                                    <input type="checkbox" name="IsPrayerRequest" value="false" id="chkRequest" />
                                    <label for="chkRequest">Prayer Request</label>
                                </div>
                            </div>
                            <div class="validation"></div>

                        </div>
                        <div class="form-group row">
                            <label class="col-xs-2 col-sm-2 col-md-2 col-lg-2">Comments:</label>
                            <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">

                                <textarea class="form-control" name="Message" rows="5" data-rule="required" data-msg="Please write something for us" placeholder="Comments"></textarea>
                            </div>
                            <div class="validation"></div>

                        </div>

                        <div class="text-center">
                            <button type="submit" class="line-btn green">Send Message</button>
                        </div>
                    </form>

                </div>

                <div class="col-lg-6 col-sm-6 col-xs-6 col-md-6">
                    <div class="form-group row col-md-offset-6">
                        <h4><u>Address</u> </h4>
                        <h5>Example <span class="label label-default">New</span></h5>
                        <h5>Example <span class="label label-default">New</span></h5>
                        <h5>Example <span class="label label-default">New</span></h5>
                        <h5>Example <span class="label label-default">New</span></h5>


                    </div>

                </div>
            </div>
            <!-- ./span12 -->
