@{var email = ViewBag.EmailId;}

<form>

    @Html.AntiForgeryToken()

    <div class="panel panel-default">

        <div class="panel-body">

            <div class="form-group row">
                <div class="col-sm-4 col-md-4 col-xs-4 col-lg-4">
                    <input type="checkbox" name="IsAll" id="chkAll" value="false" />
                    <label for="chkAll">Send To All</label>

                </div>

                <div class="col-xs-8">

                    <input type="file" multiple />
                </div>
            </div>

            <div class="form-group row">

                <label class="control-label col-xs-4 col-sm-4 col-md-4 col-lg-4">Subject:</label>
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                    <input type="text" placeholder="Enter Subject" id="txtSubject" class="form-control" />
                </div>
            </div>

            <div class="form-group">

                <div class="col-sm-7 col-md-7 col-xs-7 col-lg-7" id="summernote">
                </div>

            </div>

            <div class="modal-footer">

                <button type="button" class="btn btn-white btn-sm" data-dismiss="modal" title="Close">Cancel</button>
                <button type="button" class="btn btn-info btn-sm btn-action" data-email="@email" id="btnSendEmails" title="Save Changes">Send</button>
            </div>

        </div>


    </div>
</form>
