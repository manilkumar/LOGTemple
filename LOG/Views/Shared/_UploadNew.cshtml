@using LOG.Models
<tr>
    <td class="col-xs-4">
        <label class="col-xs-2">Title</label>
        <div class="col-xs-10">
            <input type="text" class="form-control" placeholder="Title of file" id="title" name="FileName" />
        </div>
    </td>
    <td class="col-xs-3">
        <label class="col-xs-2">Type</label>
        <div class="col-xs-10">

            @Html.DropDownList("FileType", Upload.GetUploadFileTypes() as IEnumerable<SelectListItem>, "Select Type", new { @id = "type" })
        </div>
    </td>
    <td class="col-xs-5">
        <div class="col-xs-7">

            <input type="file" multiple />
        </div>

        <div class="col-xs-5">
            <button type="button" class="btn btn-danger pull-right" id="btnCancelUpload"><span class="fa fa-remove"></span></button>

            <button type="button" class="btn btn-success pull-right" id="btnSaveItems"><span></span>Upload</button>
        </div>
    </td>

</tr>
